<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cv_cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="90dp"
    android:layout_height="120dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="20dp"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/azur_lane_elite"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/iv_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:srcCompat="@drawable/laffey_thumbnail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:background="@color/transparent_black"
            app:layout_constraintTop_toTopOf="@id/tv_ship_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_ship_name"
            />
        <TextView
            android:id="@+id/tv_ship_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laffey"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="8dp"
            />
        <TextView
            android:id="@+id/tv_ship_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="shipNickname"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tv_ship_name"
            app:layout_constraintStart_toStartOf="@id/iv_thumbnail"
            app:layout_constraintEnd_toEndOf="@id/iv_thumbnail"
            android:padding="8dp"
            android:visibility="gone"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>